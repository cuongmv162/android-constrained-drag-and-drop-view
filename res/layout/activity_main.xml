<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:dnd="http://schemas.android.com/apk/res/net.greybeardedgeek"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <net.greybeardedgeek.ConstrainedDragAndDropView
            android:id="@+id/dndView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
    >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#aaaaff"
        >
            <ImageView
                    android:id="@+id/target1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/target1"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    />
            <ImageView
                    android:id="@+id/target2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/target2"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />

            <ImageView
                    android:id="@+id/target3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/target3"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    />

            <ImageView
                    android:id="@+id/draggable"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_launcher"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    />
        </RelativeLayout>
    </net.greybeardedgeek.ConstrainedDragAndDropView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_world"
        android:background="@android:color/white"
    />

</LinearLayout>